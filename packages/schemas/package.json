{
  "name": "@repo/schemas",
  "exports": {
    ".": {
      "types": "./src/main.ts",
      "require": "./dist/cjs/main.js",
      "import": "./dist/esm/main.js"
    }
  },
  "scripts": {
    "dev:esm": "./node_modules/typescript/bin/tsc -p tsconfig.esm.json --watch",
    "dev:cjs": "./node_modules/typescript/bin/tsc -p tsconfig.cjs.json --watch",
    "dev": "pnpm run dev:esm & pnpm run dev:cjs",
    "build:esm": "./node_modules/typescript/bin/tsc -p tsconfig.esm.json",
    "build:cjs": "./node_modules/typescript/bin/tsc -p tsconfig.cjs.json",
    "build": "pnpm run build:esm && npm run build:cjs"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "nestjs-zod": "^3.0.0"
  },
  "devDependencies": {
    "tsconfig": "*",
    "typescript": "latest"
  }
}
